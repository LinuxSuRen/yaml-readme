{
	"name": "yaml-readme",
	"displayName": "yaml-readme",
	"description": "A helper to generate the READE file automatically.",
	"version": "0.0.2",
	"repository": "https://github.com/linuxsuren/yaml-readme",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "linuxsuren",
	"activationEvents": [
		"onCommand:yaml-readme.helloWorld",
		"atest"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "yaml-readme.helloWorld",
				"title": "yaml-readme"
			},
			{
				"command": "atest",
				"title": "API Testing",
				"description": "API Testing."
			}
		],
		"configuration": {
			"title": "API Testing",
			"properties": {
				"yaml-readme.server": {
					"type": "string",
					"default": "http://localhost:9090",
					"description": "server"
				}
			}
		},
		"editor/context": [
			{
				"when": "editorTextFocus && config.markdown.editorContextMenuCommands.testPackage && resourceLangId == markdown",
				"command": "atest",
				"group": "Go group 1"
			}
		],
		"markdown.editorContextMenuCommands": {
			"type": "object",
			"properties": {
				"testPackage": {
					"type": "boolean",
					"default": true,
					"description": "If true, adds command to run all tests in the current package to the editor context menu"
				}
			},
			"default": {
				"testPackage": false
			},
			"description": "Experimental Feature: Enable/Disable entries from the context menu in the editor.",
			"scope": "resource"
		},
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == yaml",
					"group": "navigation",
					"command": "atest"
				}
			],
			"editor/context": [
				{
					"when": "resourceLangId == yaml",
					"group": "navigation",
					"command": "atest"
				}
			],
			"testing/item/context": [
				{
					"group": "navigation",
					"command": "atest"
				}
			],
			"testing/item/gutter": [
				{
					"group": "navigation",
					"command": "atest"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@grpc/grpc-js": "~1.0.5",
		"@grpc/proto-loader": "~0.5.4",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@vscode/test-electron": "^2.1.3",
		"async": "~1.5.2",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"google-protobuf": "~3.14.0",
		"lodash": "~4.17.0",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"webpack": "~4.43.0",
		"webpack-cli": "~3.3.11"
	},
	"dependencies": {
		"q": "^1.5.1",
		"remark": "^14.0.2",
		"remark-admonitions": "^1.2.1",
		"remark-html": "^15.0.1",
		"xhr2": "^0.2.1"
	}
}
